[Unit]
Description=Anna Daemon - Evidence Oracle
Documentation=https://github.com/jjgarcianorway/anna-assistant
After=network.target

[Service]
Type=simple
# v4.3.1: Run as root to ensure file permissions for reset/cleanup operations
# The daemon only listens on localhost and has strict security hardening
ExecStart=/usr/local/bin/annad
WorkingDirectory=/usr/share/anna
Restart=on-failure
RestartSec=5
TimeoutStartSec=10
TimeoutStopSec=10

# Environment
# v3.13.0: HOME is needed for ollama to find model storage
Environment=RUST_LOG=annad=info
Environment=HOME=/var/lib/anna

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
# v3.13.0: Allow home access so ollama can store models in standard location
ProtectHome=read-only
PrivateTmp=yes
PrivateDevices=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectControlGroups=yes
RestrictRealtime=yes
RestrictSUIDSGID=yes
MemoryDenyWriteExecute=yes
LockPersonality=yes

# Allow network (localhost only)
RestrictAddressFamilies=AF_INET AF_INET6 AF_UNIX

# Allow reading system info
ReadOnlyPaths=/proc /sys
ReadWritePaths=/var/lib/anna /var/log/anna /run/anna

# Capabilities
CapabilityBoundingSet=
AmbientCapabilities=

[Install]
WantedBy=multi-user.target
