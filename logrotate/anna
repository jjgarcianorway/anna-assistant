/var/log/anna/mirror-audit.jsonl {
    size 10M
    rotate 14
    copytruncate
    compress
    delaycompress
    missingok
    notifempty
    create 640 anna anna
    sharedscripts
    postrotate
        systemctl reload anna-daemon.service >/dev/null 2>&1 || true
    endscript
}

/var/log/anna/*.log {
    size 10M
    rotate 14
    copytruncate
    compress
    delaycompress
    missingok
    notifempty
    create 640 anna anna
}
