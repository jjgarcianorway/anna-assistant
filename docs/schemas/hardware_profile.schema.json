{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://anna-assistant.org/schemas/hardware_profile/v1",
  "title": "Hardware Profile",
  "description": "Semantic hardware fingerprint for Arch Linux systems",
  "type": "object",
  "required": [
    "version",
    "generated_at",
    "kernel",
    "board",
    "cpu",
    "memory",
    "battery",
    "gpus",
    "network",
    "storage",
    "usb"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "const": "1"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp of profile generation"
    },
    "kernel": {
      "type": "string",
      "description": "Linux kernel version string"
    },
    "board": {
      "type": "object",
      "properties": {
        "vendor": {
          "type": ["string", "null"],
          "description": "Motherboard vendor"
        },
        "product": {
          "type": ["string", "null"],
          "description": "Motherboard product name"
        },
        "bios_date": {
          "type": ["string", "null"],
          "description": "BIOS release date"
        }
      }
    },
    "cpu": {
      "type": "object",
      "properties": {
        "model": {
          "type": ["string", "null"],
          "description": "CPU model name"
        },
        "sockets": {
          "type": ["number", "null"],
          "description": "Number of physical CPU sockets"
        },
        "cores_total": {
          "type": ["number", "null"],
          "description": "Total number of CPU cores"
        }
      }
    },
    "memory": {
      "type": "object",
      "properties": {
        "total_gb": {
          "type": ["number", "null"],
          "description": "Total system memory in GB"
        }
      }
    },
    "battery": {
      "type": "object",
      "required": ["present", "count"],
      "properties": {
        "present": {
          "type": "boolean",
          "description": "True if battery detected"
        },
        "count": {
          "type": "number",
          "description": "Number of batteries detected"
        }
      }
    },
    "gpus": {
      "type": "array",
      "description": "Graphics processing units",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "GPU device name"
          },
          "vendor": {
            "type": ["string", "null"],
            "description": "GPU vendor (NVIDIA, AMD, Intel)"
          },
          "driver": {
            "type": ["string", "null"],
            "description": "Kernel driver in use"
          },
          "vram_mb": {
            "type": ["number", "null"],
            "description": "Video memory in MB"
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional notes or warnings"
          }
        }
      }
    },
    "network": {
      "type": "array",
      "description": "Network interface controllers",
      "items": {
        "type": "object",
        "required": ["class"],
        "properties": {
          "class": {
            "type": "string",
            "enum": ["ethernet", "wireless"],
            "description": "Network device class"
          },
          "vendor": {
            "type": ["string", "null"],
            "description": "NIC vendor"
          },
          "device": {
            "type": ["string", "null"],
            "description": "Device model name"
          },
          "driver": {
            "type": ["string", "null"],
            "description": "Kernel driver in use"
          }
        }
      }
    },
    "storage": {
      "type": "object",
      "required": ["controller", "block_devices"],
      "properties": {
        "controller": {
          "type": "array",
          "description": "Storage controllers",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "vendor": {
                "type": ["string", "null"]
              },
              "device": {
                "type": ["string", "null"]
              },
              "driver": {
                "type": ["string", "null"]
              },
              "type": {
                "type": "string",
                "enum": ["nvme", "sata", "raid", "unknown"],
                "description": "Controller type"
              }
            }
          }
        },
        "block_devices": {
          "type": "array",
          "description": "Block storage devices",
          "items": {
            "type": "object",
            "required": ["name", "mounts"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Device name (sda, nvme0n1, etc)"
              },
              "model": {
                "type": ["string", "null"],
                "description": "Device model string"
              },
              "size_gb": {
                "type": ["number", "null"],
                "description": "Capacity in GB"
              },
              "rotational": {
                "type": ["boolean", "null"],
                "description": "True for HDD, false for SSD/NVMe"
              },
              "type": {
                "type": ["string", "null"],
                "enum": ["ssd", "hdd", "nvme", null],
                "description": "Device type classification"
              },
              "mounts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["mountpoint"],
                  "properties": {
                    "mountpoint": {
                      "type": "string"
                    },
                    "fs": {
                      "type": ["string", "null"],
                      "description": "Filesystem type"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "usb": {
      "type": "array",
      "description": "USB devices",
      "items": {
        "type": "object",
        "properties": {
          "class": {
            "type": ["string", "null"]
          },
          "vendor": {
            "type": ["string", "null"]
          },
          "device": {
            "type": ["string", "null"]
          }
        }
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Collection warnings or errors"
    }
  }
}
