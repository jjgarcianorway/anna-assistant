{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Anna Doctor Report",
  "description": "JSON schema for Anna Assistant doctor diagnostic reports",
  "type": "object",
  "required": ["version", "ok", "state", "summary", "report", "citation", "probes"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-.+)?$",
      "description": "Anna version",
      "examples": ["1.0.0-rc.13"]
    },
    "ok": {
      "type": "boolean",
      "description": "Overall health status"
    },
    "state": {
      "type": "string",
      "description": "Current system state",
      "enum": [
        "iso_live",
        "recovery_candidate",
        "post_install_minimal",
        "configured",
        "degraded",
        "unknown"
      ]
    },
    "summary": {
      "type": "object",
      "required": ["ok", "warn", "fail"],
      "properties": {
        "ok": {
          "type": "integer",
          "minimum": 0
        },
        "warn": {
          "type": "integer",
          "minimum": 0
        },
        "fail": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "report": {
      "type": "string",
      "description": "Path to saved diagnostic report file"
    },
    "citation": {
      "type": "string",
      "pattern": "^\\[archwiki:",
      "description": "Arch Wiki citation",
      "examples": ["[archwiki:System_maintenance]"]
    },
    "probes": {
      "type": "array",
      "description": "Individual probe results",
      "items": {
        "type": "object",
        "required": ["probe", "status", "details", "citation", "duration_ms", "ts"],
        "properties": {
          "probe": {
            "type": "string",
            "description": "Probe name"
          },
          "status": {
            "type": "string",
            "enum": ["ok", "warn", "fail"]
          },
          "details": {
            "type": "object"
          },
          "citation": {
            "type": "string",
            "pattern": "^\\[archwiki:"
          },
          "duration_ms": {
            "type": "integer",
            "minimum": 0
          },
          "ts": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
