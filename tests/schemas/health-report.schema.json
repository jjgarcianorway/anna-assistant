{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Anna Health Report",
  "description": "JSON schema for Anna Assistant health reports",
  "type": "object",
  "required": ["state", "summary", "results", "citation"],
  "properties": {
    "state": {
      "type": "string",
      "description": "Current system state",
      "enum": [
        "iso_live",
        "recovery_candidate",
        "post_install_minimal",
        "configured",
        "degraded",
        "unknown"
      ]
    },
    "summary": {
      "type": "object",
      "required": ["ok", "warn", "fail"],
      "properties": {
        "ok": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of probes that passed"
        },
        "warn": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of probes with warnings"
        },
        "fail": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of probes that failed"
        }
      }
    },
    "results": {
      "type": "array",
      "description": "Individual probe results",
      "items": {
        "type": "object",
        "required": ["probe", "status", "details", "citation", "duration_ms", "ts"],
        "properties": {
          "probe": {
            "type": "string",
            "description": "Probe name",
            "examples": ["disk-space", "systemd-units", "pacman-db"]
          },
          "status": {
            "type": "string",
            "enum": ["ok", "warn", "fail"],
            "description": "Probe result status"
          },
          "details": {
            "type": "object",
            "description": "Probe-specific details"
          },
          "citation": {
            "type": "string",
            "pattern": "^\\[archwiki:",
            "description": "Arch Wiki citation for this probe",
            "examples": ["[archwiki:System_maintenance]"]
          },
          "duration_ms": {
            "type": "integer",
            "minimum": 0,
            "description": "Probe execution time in milliseconds"
          },
          "ts": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp"
          }
        }
      }
    },
    "citation": {
      "type": "string",
      "pattern": "^\\[archwiki:",
      "description": "Arch Wiki citation for health system",
      "examples": ["[archwiki:System_maintenance]"]
    }
  }
}
